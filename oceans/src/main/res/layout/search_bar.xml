<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height">

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/page_padding"
        android:paddingRight="@dimen/page_padding"
        android:src="@mipmap/back" />

    <EditText

        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toLeftOf="@+id/right_view"
        android:layout_toRightOf="@+id/iv_finish"
        android:background="@drawable/rect_search"
        android:drawableLeft="@mipmap/search_small"
        android:drawablePadding="@dimen/dp10"
        android:gravity="center_vertical"
        android:hint="搜索"
        android:imeOptions="actionSearch"
        android:paddingLeft="@dimen/dp10"
        android:singleLine="true"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/right_view"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:background="@drawable/sel_click"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="搜索"
            android:textColor="#666666"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>