    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 后台收到消息的时候，休眠状态唤醒CPU，将消息显示在通知栏 -->
