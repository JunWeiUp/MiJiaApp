        <activity android:name=".ui.other.activity.SelectUploadLocationActivity" />
        <activity android:name=".ui.home.activity.SettingActivity" />
        <activity android:name=".ui.home.activity.FlowSettingActivity" />
        <activity android:name=".ui.home.activity.SpaceSettingActivity" />
        <activity android:name=".AdvertisingActivity" />
        <activity
            android:name=".ui.other.activity.LoginActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.other.activity.SelectVoiceVideoFileActivity" />
        <activity android:name=".ui.other.activity.SelectOtherUploadActivity" />
        <activity android:name=".ui.other.activity.SelectMiDunActivity" />
        <activity android:name=".ui.other.activity.SelectDiskActivity" /> <!-- 秘夹服务 -->
        <service android:name=".service.MiJiaService" />

        <receiver
            android:name=".AppRegister"
            android:permission="com.tencent.mm.plugin.permission.SEND">
            <intent-filter>
                <action android:name="com.tencent.mm.plugin.openapi.Intent.ACTION_REFRESH_WXAPP" />
            </intent-filter>
        </receiver> <!-- <receiver android:name=".socket.NetWorkStateReceiver"> -->
        <!-- <intent-filter> -->
        <!-- //检测网络变化的acton -->
        <!-- <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/> -->
