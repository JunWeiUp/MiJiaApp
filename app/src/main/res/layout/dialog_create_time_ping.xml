<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_close"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="取消"
                android:textColor="#FF999999"
                android:textSize="15sp"
                />

            <View
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_sure"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="#FF108EE9"
                android:textSize="15sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/dp_270"
            android:orientation="horizontal">

            <noman.weekcalendar.wheelview.WheelView
                android:id="@+id/day_wheelview"
                android:layout_width="50dp"
                android:layout_height="240dp"
                app:isLoop="false"
                app:lineColor="#EEEEEE"
                app:itemVisibleNum="9"
                app:textSizeCenter="18sp"
                app:textColorOuter="#cccccc"
                app:textColorCenter="#FF333333"
                app:textSizeOuter="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textStyle="bold"
                android:textColor="#FF333333"
                android:textSize="16sp"
                />

            <noman.weekcalendar.wheelview.WheelView
                android:id="@+id/hour_wheelview"
                android:layout_width="50dp"
                android:layout_height="240dp"
                app:isLoop="false"
                app:lineColor="#EEEEEE"
                app:itemVisibleNum="9"
                android:layout_marginLeft="45dp"
                app:textSizeCenter="18sp"
                app:textColorOuter="#cccccc"
                app:textColorCenter="#FF333333"
                app:textSizeOuter="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小时"
                android:textStyle="bold"
                android:textColor="#FF333333"
                android:textSize="16sp"
                />

        </LinearLayout>




    </LinearLayout>

</layout>