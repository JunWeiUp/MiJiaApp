<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handler"
            type="com.mijia.app.dialog.UploadFileDialog" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_white_raidos"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp36"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_create_folder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/wenjian_wendang"
                android:gravity="center"
                android:onClick="@{handler::onClick}"
                android:text="新建文件夹"
                android:textColor="#FF666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/wenjian_zhaopian"
                android:gravity="center"
                android:onClick="@{handler::onClick}"
                android:text="上传照片"
                android:textColor="#FF666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/wenjian_shipin"
                android:gravity="center"
                android:onClick="@{handler::onClick}"
                android:text="上传视频"
                android:textColor="#FF666666"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/wenjian_wendan"
                android:gravity="center"
                android:onClick="@{handler::onClick}"
                android:text="上传文档"
                android:textColor="#FF666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_voice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/wenjian_yinpin"
                android:gravity="center"
                android:onClick="@{handler::onClick}"
                android:text="上传音频"
                android:textColor="#FF666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/wenjian_qita"
                android:gravity="center"
                android:onClick="@{handler::onClick}"
                android:text="上传其他"
                android:textColor="#FF666666"
                android:textSize="14sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="36dp"
            android:onClick="@{handler::onClick}"
            android:src="@drawable/tankuan_fenlei_guanbi" />

    </LinearLayout>

</layout>