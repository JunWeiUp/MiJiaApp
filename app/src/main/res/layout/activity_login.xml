<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            app:delay_time="3000"
            app:image_scale_type="center_crop"
            app:indicator_drawable_selected="@drawable/banner_indicator_selected"
            app:indicator_drawable_unselected="@drawable/banner_indicator_no_selected"
            app:indicator_height="8dp"
            app:indicator_width="8dp"
            app:scroll_time="2000" />


        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp40"
            android:layout_marginBottom="58dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_tel"
                android:hint="请输入账号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/et_pwd"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20" />

            <LinearLayout
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_moren_address"/>

                <TextView
                    android:id="@+id/tv_fuwuxieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:textColor="#3779E5"
                    android:text="《个人信息保护说明》"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="和"/>

                <TextView
                    android:id="@+id/tv_yinsizhengce"
                    android:textColor="#3779E5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《隐私声明》"/>

            </LinearLayout>






            <TextView
                android:id="@+id/tv_jiadenglu"
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:background="@drawable/selector_blue_radio_btn_back"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="登录"
                android:textColor="#FFFFFFFF"
                android:textSize="17sp" />




        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rv_login"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/dp80"
            android:layout_marginBottom="58dp"

            android:background="@drawable/selector_blue_radio_btn_back"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/weixin"
                android:drawablePadding="5dp"
                android:text="微信快捷登录"
                android:textColor="#FFFFFFFF"
                android:textSize="17sp" />

        </RelativeLayout>


    </LinearLayout>

</layout>
