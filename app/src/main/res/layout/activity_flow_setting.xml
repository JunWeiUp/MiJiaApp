<?xml version="1.0" encoding="utf-8"?>
<layout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9EBEF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="流量设置"
                android:textColor="#FF222A37"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="允许手机流量上传文件"
                android:textColor="#FF333333"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/iv_agree_upload_file"
                android:src="@drawable/selector_switch_btn"
                android:layout_width="48dp"
                android:layout_height="32dp" />

        </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="@dimen/dp0.5"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="允许手机流量下载文件"
                android:textColor="#FF333333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_agree_down_file"
                android:src="@drawable/selector_switch_btn"
                android:layout_width="48dp"
                android:layout_height="32dp" />

        </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="@dimen/dp0.5"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="允许手机流量备份通讯录"
                android:textColor="#FF333333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_agree_backup_contacts"
                android:src="@drawable/selector_switch_btn"
                android:layout_width="48dp"
                android:layout_height="32dp" />

        </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="@dimen/dp0.5"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="允许手机流量恢复通讯录"
                android:textColor="#FF333333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_agree_down_contacts"
                android:src="@drawable/selector_switch_btn"
                android:layout_width="48dp"
                android:layout_height="32dp" />

        </LinearLayout>


    </LinearLayout>

</layout>
