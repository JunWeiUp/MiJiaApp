<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_157"
    android:layout_height="@dimen/dp_103"
    android:layout_marginLeft="15dp"
    android:id="@+id/rv_main"
    android:background="@drawable/selector_home_pc_item_back">

    <TextView
        android:id="@+id/tv_pc_title"
        android:layout_margin="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的密盾"
        android:textColor="@drawable/selector_home_pc_item_text_color"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_online_status"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/selector_home_pc_online_status"/>

        <TextView
            android:id="@+id/tv_pc_online_status"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线"
            android:textColor="@drawable/selector_home_pc_item_text_color"
            android:textSize="12sp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_marginRight="10dp"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:src="@drawable/selector_home_pc_item_more"/>
        
    </LinearLayout>
</RelativeLayout>